@model CayTrongMVC.Models.CayTrong

@{
    ViewData["Title"] = "Chi tiết cây trồng";
}

<div class="title-container">
    <h2 class="title">Tên cây trồng: @Model.Ten</h2>
</div>

<div class="detail-container">
    <div class="image-wrapper">
        <img src="@Url.Content("~/" + Model.HinhAnh)" alt="@Model.Ten" class="detail-image" />
    </div>

    <div class="description-container">
        <h3>Mô Tả</h3>
        <p>@Model.MoTa</p>
    </div>
</div>

<div class="button-container">
    <a asp-controller="TrangChu" asp-action="Index" class="btn btn-secondary">Trở về</a>
</div>

<style>
    .title-container {
        background-color: #d4edda;
        padding: 15px;
        text-align: center;
        border-radius: 8px;
        margin: 20px auto;
        max-width: 800px;
        box-shadow: 0px 4px 2px 1px rgba(0, 0, 0, 0.2);
    }

    .title {
        color: #2c3e50;
        margin: 0;
    }

    .detail-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #f0f7eb;
        padding: 20px;
        border-radius: 10px;
        max-width: 800px;
        margin: 20px auto;
        box-shadow: 4px 4px 1px 2px rgba(0, 0, 0, 0.2);
    }

    .image-wrapper {
        text-align: center;
    }

    .detail-image {
        max-width: 100%;
        height: auto;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .description-container {
        background-color: #ffffff;
        padding: 15px;
        border-radius: 8px;
        margin-top: 15px;
        text-align: center;
        box-shadow: 0 3px 2px 2px rgba(0, 0, 0, 0.2);
        width: 100%;
    }

    .button-container {
        margin-top: 20px;
        text-align: center;
    }

    .btn {
        background-color: #6c757d;
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
        text-decoration: none;
    }

        .btn:hover {
            background-color: #5a6268;
        }
</style>
