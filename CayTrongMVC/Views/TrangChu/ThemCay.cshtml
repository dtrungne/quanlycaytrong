@model CayTrongMVC.Models.CayTrong

<h2>🌿 Thêm Cây Trồng 🌿</h2>

<form method="post">
    <div class="form-group">
        <label for="Ten">Tên Cây:</label>
        <input type="text" name="Ten" class="form-control" placeholder="Nhập tên cây..." required />
        @if (ViewData.ModelState.ContainsKey("Ten") && ViewData.ModelState["Ten"].Errors.Count > 0)
        {
            <div class="alert alert-danger">
                @ViewData.ModelState["Ten"].Errors[0].ErrorMessage
            </div>
        }
    </div>

    <div class="form-group">
        <label for="MoTa">Mô Tả:</label>
        <textarea name="MoTa" class="form-control" rows="4" placeholder="Nhập mô tả về cây..." required></textarea>
        @if (ViewData.ModelState.ContainsKey("MoTa") && ViewData.ModelState["MoTa"].Errors.Count > 0)
        {
            <div class="alert alert-danger">
                @ViewData.ModelState["MoTa"].Errors[0].ErrorMessage
            </div>
        }
    </div>

    <div class="form-group">
        <label for="HinhAnh">URL Hình Ảnh:</label>
        <input type="text" name="HinhAnh" class="form-control" placeholder="Vui lòng nhập URL hình ảnh hoặc ảnh từ thư mục 'images'..." required />
        @if (ViewData.ModelState.ContainsKey("HinhAnh") && ViewData.ModelState["HinhAnh"].Errors.Count > 0)
        {
            <div class="alert alert-danger">
                @ViewData.ModelState["HinhAnh"].Errors[0].ErrorMessage
            </div>
        }
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">➕ Thêm Cây</button>
        <a href="@Url.Action("Index", "TrangChu")" class="btn btn-secondary">❌ Hủy</a>
    </div>
</form>
